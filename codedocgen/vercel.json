{
  "version": 2,
  "builds": [
    {
      "src": "backend/app/main.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.11",
        "maxLambdaSize": "50mb"
      }
    },
    {
      "use": "@vercel/static-build",
      "src": "frontend/package.json",
      "config": {
        "installCommand": "yum install -y git && export GIT_PYTHON_REFRESH=quiet",
        "buildCommand": "CI=false npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "backend/app/main.py"
    }
  ]
} 